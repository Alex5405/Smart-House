FROM python:3.9-slim as builder

# Директория скрипта
WORKDIR /e_1

# Переменные окружения python
ENV PYTHONDONTWRITEBYTECODE 1
ENV PYTHONUNBUFFERED 1

FROM python:3.9-slim

# Директория скрипта
WORKDIR /e_1

COPY --from=builder /e_1 .

ADD e_1.py /e_1

EXPOSE 1234
