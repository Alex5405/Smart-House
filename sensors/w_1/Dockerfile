FROM python:3.9-slim as builder

# Директория скрипта
WORKDIR /w_1

# Переменные окружения python
ENV PYTHONDONTWRITEBYTECODE 1
ENV PYTHONUNBUFFERED 1

FROM python:3.9-slim

# Директория скрипта
WORKDIR /w_1

COPY --from=builder /w_1 .

ADD w_1.py /w_1

EXPOSE 1234
