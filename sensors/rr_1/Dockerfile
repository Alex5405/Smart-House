FROM python:3.9-slim as builder

# Директория скрипта
WORKDIR /rr_1

# Переменные окружения python
ENV PYTHONDONTWRITEBYTECODE 1
ENV PYTHONUNBUFFERED 1

FROM python:3.9-slim

# Директория скрипта
WORKDIR /rr_1

COPY --from=builder /rr_1 .

ADD rr_1.py /rr_1

EXPOSE 1234
